@using WatchStore25.Models
@using System.Globalization;

@{
    ViewBag.Title = "Chi Tiết Sản Phẩm";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!-----------------single product details----------->
<div class="small-container single-product">
    <div class="row">
        <div class="col-2">
            <img src=@Url.Content("~/Content/Images/" + Model.img) width="100%" id="ProductImg">
        </div>

        <div class="col-2">
            <form action="@Url.Action("Create", "ShoppingCart")" method="post">
                <input type="hidden" name="productID" value="@Model.idProduct" />
                <p>
                    <a href="@Url.Action("Index", "Home")">Trang Chủ</a> /
                    @if (Model.idTypeProduct == true)
                    {
                        <a href="@Url.Action("ProductsMan","Home")">Đồng Hồ Nam</a>
                    }
                    else
                    {
                        <a href="@Url.Action("ProductsWoman","Home")">Đồng Hồ Nữ</a>
                    }/ @Model.name
                </p>
                <h1>@Model.name</h1>
                <h4>@string.Format(new CultureInfo("vi-VN"), "{0:#,## VNĐ}", Model.amount)</h4>
                <select>
                    <option>Chọn màu</option>
                    <option>Đen</option>
                    <option>Bạc</option>
                    <option>Xám</option>
                </select>
                <input name="quanlity" type="number" value="1">
                <input type="submit" class="btn" value="Thêm vào giỏ">
                <h3>Chi tiết sản phẩm <i class="fa fa-indent"></i></h3>
                <br>
                <p>@Model.detail</p>
            </form>
        </div>
    </div>
</div>
