<body>
    <div class="head">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Content/Images/logo.png")" width="70px"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item  mx-4 ">
                        @Html.ActionLink("Nam", "ProductsMan", "Home")
                    </li>
                    <li class="nav-item mx-4">
                        @Html.ActionLink("Nữ", "ProductsWoman", "Home")
                    </li>
                    <li class="nav-item mx-4">
                        @Html.Partial("_LoginPartial")
                    </li>
                
                </ul>
                <div class="shoppingCart mx-2"> <a href="@Url.Action("Index","ShoppingCart")"><img src="@Url.Content("~/Content/Images/cart.png")" width="35px" height="35px">@((Session["ShopingCarts"] as List<DETAIL_ORDER>)?.Count)</a></div>
                <form class="form-inline my-2 my-lg-0 " action="@Url.Action("Search","Home")" method="get">
                    <input class="form-control mr-sm-2" type="text" name="keyword" placeholder="Tìm kiếm" value="@ViewBag.keyword">
                    <button class="class=" btn btn-outline-success my-2 my-sm-0"" style="border:none; background-color:white">
                        <span @Url.Action("Search", "Admin")>
                            <i class="las la-search"></i>
                        </span>
                    </button>
                </form>

            </div>
        </nav>
    </div>
    <div class="container">


    </div>
    <div>
        @RenderBody()
    </div>
